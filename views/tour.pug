extends layout.pug
block content
  .jumbotron.container.bg-transparent.mb-0.mb-md-5
    .pb-0.pb-md-5
      .floatings
        img.w-100.shift-top-md-200(src="/media/hero.svg", alt="")
      h1.mt-5.mb-3=__("Become our Hiring Partner")
      h2.font-weight-light.mb-3=__("We connect companies to the most talented Web Developers and Online Marketers.")
      .mt-5
        .py-5
          a.btn.btn-secondary.btn-lg(href='/contact', data-toggle='modal', data-target='#contactFormModal')
            =__("Become a Hiring Partner")
  div.pb-5.bg-primary
    .container.container-counter.mt-4.pb-5.section-counter
      .col-12.pt-5
        .row.text-white
          .col-6.col-md-3.mb-5.border-white.border-right.border-md-0
            .counter-item
              .counter-number.font-weight-bold
                h2.display-1
                  span.counter-count=locals.settings.careersuccesspage_alumni ? locals.settings.careersuccesspage_alumni : user ? "setting not defined" : ""
                  = "+"
              h4.font-weight-bold.shadowed.center.pb-4.w-min-width.m-0-auto: +translate("DCI Alumni")
          .col-6.col-md-3.mb-5.border-white.border-left.border-md-0
            .counter-item
              .counter-number.font-weight-bol
                h2.display-1
                  span.counter-count=locals.settings.careersuccesspage_students ? locals.settings.careersuccesspage_students : user ? "setting not defined" : ""
                  = "+"
              h4.font-weight-bold.shadowed.center.pb-4.w-min-width.m-0-auto
                +translate("DCI Students")
          .col-6.col-md-3.mb-5.border-white.border-right.border-md-0
            .counter-item
              .counter-number.font-weight-bold
                h2.display-1
                  span.counter-count=locals.settings.careersuccesspage_companypartners ? locals.settings.careersuccesspage_companypartners : user ? "setting not defined" : ""
                  = "+"
              h4.font-weight-bold.shadowed.center.pb-4.w-min-width.m-0-auto: +translate("Company Partners")
          .col-6.col-md-3.mb-5.border-white.border-left.border-md-0
            .counter-item
              .counter-number.font-weight-bold
                h2.display-1
                  span.counter-count=locals.settings.careersuccesspage_employmentrate ? locals.settings.careersuccesspage_employmentrate : user ? "setting not defined" : ""
                  = "%"
              h4.font-weight-bold.shadowed.center.pb-4.w-min-width.m-0-auto: +translate("Employment rate within 6 months")
  .container.pt-5
    .mx-lg-5.px-lg-5.pb-lg-5
      .mx-xl-5.px-xl-4
        h2.mb-3.pb-3.mb-4
          =__("What makes our graduates")
          =" "
          =__("stand out")
          = "?"
        p.text-muted.mb-5=__("Our 1-year program develops higly-motivated individuals into great tech and digital professionals with a broad skill set.")

        .row.justify-content-center
          each course in courses
            +courseOverviewCard(course)

  .container.mt-5
    h2.mb-3.pb-3.mb-4=__( "Additional training" )
    p.text-muted.mb-5=__("Our 1-year program develops higly-motivated individuals into great tech and digital professionals with a broad skill set.")
  .bg-primary.py-3
    .container
      .mx-lg-5
        .mx-xl-5
          .row
            .col-md-4.col-6.py-2.justify-content-md-center.my-2.d-flex.floatings
              .bg-white.p-3.d-flex.d-flex.align-items-center.rounded.d-flex.h-100.w-100
                .mr-3 
                  include ../assets/media/careersuccess_languages.svg
                .h-3.d-flex.flex-column.justify-content-center
                  =__("Soft Skill Training")
            .col-md-4.col-6.py-2.justify-content-md-center.my-2.d-flex.floatings.justify-content-end
              .bg-white.p-3.d-flex.d-flex.align-items-center.rounded.d-flex.h-100.w-100
                .mr-3 
                  include ../assets/media/careersuccess_time.svg
                .h-3.d-flex.flex-column.justify-content-center
                  =__("Time management")
            .col-md-4.col-6.py-2.justify-content-md-center.my-2.d-flex.floatings
              .bg-white.p-3.d-flex.d-flex.align-items-center.rounded.d-flex.h-100.w-100
                .mr-3 
                  include ../assets/media/careersuccess_team_meeting.svg
                .h-3.d-flex.flex-column.justify-content-center
                  =__("Agile project management")
            .col-md-4.col-6.py-2.justify-content-md-center.my-2.d-flex.floatings.justify-content-end
              .bg-white.p-3.d-flex.d-flex.align-items-center.rounded.d-flex.h-100.w-100
                .mr-3 
                  include ../assets/media/careersuccess_data_analytics.svg
                .h-3.d-flex.flex-column.justify-content-center
                  =__("Language courses")
            .col-md-4.col-6.py-2.justify-content-md-center.my-2.d-flex.floatings
              .bg-white.p-3.d-flex.d-flex.align-items-center.rounded.d-flex.h-100.w-100
                .mr-3 
                  include ../assets/media/careersuccess_consulting.svg
                .h-3.d-flex.flex-column.justify-content-center
                  =__("Job coaching")
            .col-md-4.col-6.py-2.justify-content-md-center.my-2.d-flex.floatings.justify-content-end
              .bg-white.p-3.d-flex.d-flex.align-items-center.rounded.d-flex.h-100.w-100
                .mr-3 
                  include ../assets/media/careersuccess_online_lesson.svg
                .h-3.d-flex.flex-column.justify-content-center
                  =__("Mentoring")

  if partners
    - partnersWithTestimonial = partners.filter(p => p.testimonial_name && p.testimonial_job && p.testimonial_content && p.testimonial_show )
    if partnersWithTestimonial.length > 0
      .container
        .mx-lg-5
          .mx-xl-5
            .mx-lg-5
              .py-5
                h2.pb-3.mb-5
                  =__("What companies")
                  = " "
                  =__("love")
                  = " "
                  =__("about our graduates")
      #careersuccesscarousel.carousel.slide.mb-5.pt-3.pb-5(data-ride="carousel")
        .carousel-inner
          each partner, index in partnersWithTestimonial
            .carousel-item(class= index === 0 ? ` active` : ``)
              .container
                .mx-lg-5
                  .mx-xl-5
                    .mx-lg-5.px-lg-2
                      .bg-primary-trans.p-4.rounded-lg
                        if user && partner && user.userId === partner.userId || user && user.admin === "true"
                          a.position-absolute.right.bottom.btn.btn-outline-primary.z-foreground(href=`/admin/stories/edit/${partner.slug}`) Edit
                            
                        .d-flex.justify-content-between.align-items-start
                          img.mw-150.object-fit-contain(alt=partner.title, src="/images/" + partner.partnerlogo)
                          
                          div.text-right
                            h4.font-weight-bold=partner.testimonial_name
                            h5.font-italic=partner.testimonial_job
                        .p-5
                          blockquote.blockquote.my-1=partner.testimonial_content

            if partnersWithTestimonial.length > 1
              a.carousel-control-prev(href="#careersuccesscarousel" role="button" data-slide="prev")
                span.carousel-control-prev-icon(aria-hidden="true")
                span.sr-only Previous
              a.carousel-control-next(href="#careersuccesscarousel" role="button" data-slide="next")
                span.carousel-control-next-icon(aria-hidden="true")
                span.sr-only Next
  else if user
    .text-center
      ="No partners have either defined a testimonial_job, testimonial_name, testimonial_content or are not marked as testimonial_show."

  if partners
    - partnersWithTestimonialsShown = partners.filter(p => p.testimonial_show)
    if partnersWithTestimonialsShown.length > 0
      div.mt-5
        .py-5
          .py-5
            .container.py-5
              .mx-lg-5
                .mx-lg-5
                  .mx-xl-5
                    h2.pb-3.my-5=__("Our Hiring Network")
                    h3.mb=__("More than ")
                      =locals.settings.careersuccesspage_companypartners
                      = "+ "
                      =__("company partners ")
              
              - randompartners = [...partnersWithTestimonialsShown]
              - for (let i = randompartners.length - 1; i > 0; i--) {
                  - const j = Math.floor(Math.random() * (i + 1));
                  - [randompartners[i], randompartners[j]] = [randompartners[j], randompartners[i]];
              - }  
              .mx-lg-5
                .mx-lg-5
                  .mx-xl-5
                    .row.my-5.justify-content-center
                      each partner, index in randompartners.splice(0,6)
                        .col-md-4.col-6.text-center.my-4.d-flex.align-items-center.justify-content-center(class=index === 2 || index === 5 ? `justify-content-md-end` : index === 0 || index === 3 ? `justify-content-md-start`: ``)
                          img.mw-150.object-fit-contain(alt=partner.title, src="/images/" + partner.partnerlogo)
  else if user
    .text-center.my-5
      ="No partners are marked as testimonial_show."

  .container.my-5
    .mx-0.mx-md-4.mx-lg-5
      .mx-lg-5
        .mx-xl-5
          h2.pb-3.pt-5.mb-5
            =__("How our hiring partners")
            = " "
            =__("benefit")
            ="?"
          .row
            .col-md-6.mb-4.floatings
              .py-md-3.h-100
                .h-100.border.d-flex.flex-column.p-5.justify-content-center.box-shadow
                  h5.font-weight-bold=__("Access our student profiles even before graduation")
                  p.font-weight-light.font-size-normal-below-md=__("Every 4-8 weeks we have a new graduation class in each of our locations")
            .col-md-6.mb-4.floatings
              .py-md-3.h-100
                .h-100.border.d-flex.flex-column.p-5.justify-content-center.box-shadow
                  h5.font-weight-bold=__("Participate at our events for free")
                  p.font-weight-light.font-size-normal-below-md=__("Receive regular invitations to our Final Events and meet our graduates")
            .col-md-6.mb-4.floatings
              .py-md-3.h-100
                .h-100.border.d-flex.flex-column.p-5.justify-content-center.box-shadow
                  h5.font-weight-bold=__("Host a company tour for our students")
                  p.font-weight-light.font-size-normal-below-md=__("Show our students what it is like to work in tech by inviting them to your (virtual) offices")
            .col-md-6.mb-4.floatings
              .py-md-3.h-100
                .h-100.border.d-flex.flex-column.p-5.justify-content-center.box-shadow
                  h5.font-weight-bold=__("Receive financial support when hiring DCI graduates")
                  p.font-weight-light.font-size-normal-below-md=__("Employer can be reimbursed 50% of the salary paid for half of the time the student is hired")
            .col-md-6.mb-4.floatings
              .py-md-3.h-100
                .h-100.border.d-flex.flex-column.p-5.justify-content-center.box-shadow
                  h5.font-weight-bold=__("Hire our graduates")
                  p.font-weight-light.font-size-normal-below-md=__("Hire our students for Intern positions, and our graduates for Junior/Trainee positions ")
            .col-md-6.mb-4.floatings
              .py-md-3.h-100
                .h-100.border.d-flex.flex-column.p-5.justify-content-center.box-shadow
                  h5.font-weight-bold=__("Give an Industry Lecture")
                  p.font-weight-light.font-size-normal-below-md=__("Share your industry knowledge by holding a lecture on a topic from our curriculum")

  .container.text-center.mb-5
    h2.display-1.font-weight-light.mb-5.text-primary=__("Fill Your Open Vacancies")
    h3.display-2.font-weight-light.mb-5=__("For web developers and online marketers")
    a.btn.btn-primary.btn-lg(href='/contact', data-toggle='modal', data-target='#contactFormModal')
      =__("Become a Hiring Partner")

  .pb-5
  .pb-5
  .pb-200

  //-   each location in locations.filter(l => l.isCampus)
  //-     span.badge.badge-primary.mr-3.mb-3.font-size-normal=location.name
